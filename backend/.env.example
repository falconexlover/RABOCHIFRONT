# Основные настройки
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000
FRONTEND_URL=http://localhost:3000

# База данных 
# Вариант 1: Подключение через DATABASE_URL (рекомендуется для Vercel)
DATABASE_URL=postgresql://username:password@hostname:port/database

# Вариант 2: Компоненты для подключения к PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=hotel_db

# SQLite настройки (только для разработки)
SQLITE_PATH=./database-dev.sqlite

# Безопасность
JWT_SECRET=change_me_to_secure_secret_in_production
JWT_EXPIRE=7d
TOKEN_COOKIE_EXPIRES=7

# Email
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=Лесной Дворик <your_email@gmail.com>

# Платежи
STRIPE_SECRET_KEY=sk_test_your_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_key

# Файловое хранилище
UPLOAD_PATH=./public/uploads

# Логирование
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Vercel
VERCEL=0 # Установите 1 в среде Vercel 