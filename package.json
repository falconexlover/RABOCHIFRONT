{
  "name": "lesnoy-dvorik",
  "version": "1.0.0",
  "description": "Гостиничный комплекс 'Лесной Дворик'",
  "scripts": {
    "frontend:dev": "cd frontend && npm run start",
    "backend:dev": "cd backend && npm run dev",
    "dev": "concurrently \"npm run frontend:dev\" \"npm run backend:dev\"",
    "install:all": "npm install && cd frontend && npm install && cd ../backend && npm install",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "cd backend && npm run build",
    "build": "npm run frontend:build && npm run backend:build",
    "clean": "rm -rf frontend/node_modules backend/node_modules node_modules",
    "backend:deploy": "cd backend && vercel --prod",
    "frontend:deploy": "cd frontend && vercel --prod",
    "backend:deploy:init": "cd backend && vercel",
    "frontend:deploy:init": "cd frontend && vercel",
    "deploy": "./deploy.sh",
    "lint": "concurrently \"cd frontend && npm run lint\" \"cd backend && npm run lint\"",
    "test": "concurrently \"cd frontend && npm run test\" \"cd backend && npm run test\"",
    "init:env": "cp backend/.env.example backend/.env && cp frontend/.env.example frontend/.env"
  },
  "engines": {
    "node": ">=14.0.0",
    "npm": ">=7.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/falconexlover/sitectestoviy.git"
  },
  "keywords": [
    "hotel",
    "booking",
    "vercel",
    "react",
    "nodejs"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "i18next": "^24.2.3",
    "i18next-fs-backend": "^2.6.0",
    "i18next-http-middleware": "^3.7.1",
    "winston": "^3.17.0"
  }
}
